<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Hospital.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hospital"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBox x:Name="UsernameTextBox" PlaceholderText="Username" Width="300" />
            <PasswordBox x:Name="PasswordTextBox" PlaceholderText="Password" Width="300" />
            <Button Content="Login" Click="LoginButton_Click" Width="300" />
        </StackPanel>
    </Grid>
</Window>