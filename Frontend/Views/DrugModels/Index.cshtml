@model IEnumerable<Frontend.Models.DrugModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Drugs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supply)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supply)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DrugID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DrugID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DrugID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
