@model IEnumerable<Frontend.Models.DoctorJointModel>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Doctors List</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="doctorsTable">
                            <thead>
                                <tr>
                                    <th>License Number</th>
                                    <th>Department</th>
                                    <th>Rating</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model)
                                {
                                    <tr>
                                        <td>@doctor.LicenseNumber</td>
                                        <td>@doctor.Department</td>
                                        <td>@doctor.Rating</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="DoctorJointModels" asp-action="Details" asp-route-id="@doctor.DoctorId" 
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-info-circle"></i> Details
                                                </a>
                                                <a asp-controller="DoctorJointModels" asp-action="Edit" asp-route-id="@doctor.DoctorId" 
                                                   class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a asp-controller="DoctorJointModels" asp-action="Delete" asp-route-id="@doctor.DoctorId" 
                                                   class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#doctorsTable').DataTable({
                "paging": true,
                "ordering": true,
                "searching": true,
                "responsive": true
            });
        });
    </script>
}
